<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bobo.cms.dao.CommentMapper">

<resultMap type="Comment" id="commentResultMap">
 <id column="id" property="id"/>
 <result column="user_id" property="userId"/>
 <result column="article_id" property="articleId"/>
 <result column="content" property="content"/>
 <result column="created" property="created"/>
 <!-- 封装user -->
 <association property="user" javaType="User" select="com.bobo.cms.dao.UserMapper.selectByPrimaryKey" column="user_id"></association>
 <association property="article" javaType="Article" select="com.bobo.cms.dao.ArticleMapper.selectByPrimaryKey" column="article_id"></association>
 

</resultMap>

<select id="selects"  resultMap="commentResultMap">
select  * from cms_comment 
<where>
  <if test="userId!=null">
     
     user_id =#{userId}
  
  </if>
  <if test="articleId!=null">
     
     and article_Id =#{articleId}
  
  </if>


</where>


</select>

  <insert id="insert">
  
  insert into cms_comment(user_id,created,content,article_id)
   values(#{userId},#{created},#{content},#{articleId})
  </insert>

</mapper>